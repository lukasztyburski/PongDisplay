<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/background</item>
    </style>


    <style name="toolbar_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="toolbar_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/toolbar_tv_color</item>
    </style>

    <style name="accept_button">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">@string/ok_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="label">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="spinner">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">196dp</item>
    </style>

</resources>

